@page "/"
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Mind Map Maker-Syncfusion Blazor Components Showcase App</title>
    <base href="/" />
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link href="assets/db-icons1/style.css" rel="stylesheet" />
    <link href="assets/dbstyle/diagrambuilder.css" rel="stylesheet" />
    <script src="_content/BlazorWasmCommon_NET8/interop.js"></script>
    <link href="_content/Syncfusion.Blazor/styles/fluent.css" rel="stylesheet">
    <script src="_content/Syncfusion.Blazor/scripts/syncfusion-blazor.min.js" type="text/javascript"></script>
    <HeadOutlet @rendermode="@InteractiveWebAssembly" />
</head>

<body>
    <div class="loading-body-overlay">
        <p id="app">Loading...</p>
    </div>
    <style>
    .loading-body-overlay {
        width: 100%;
        height: 100%;
        background-color: white;
        z-index: 1;
        }
    </style>
    <Routes @rendermode="@InteractiveWebAssembly" />
    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script>
        setTimeout(function () {
            var overlayEle = document.querySelector(".loading-body-overlay");
            if (overlayEle) {
                overlayEle.style.display = "none";
            }
        }, 3000);
    </script>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>
